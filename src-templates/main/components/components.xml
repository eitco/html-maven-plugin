<component-set>
    <components>
        <component>
            <role>
                org.apache.maven.lifecycle.mapping.LifecycleMapping
            </role>
            <role-hint>html</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                ${project.groupId}:${project.artifactId}:${project.version}:web-resources
                            </process-resources>
                            <compile>
                                ${project.groupId}:${project.artifactId}:${project.version}:from-asciidoc
                                ,${project.groupId}:${project.artifactId}:${project.version}:from-markdown
                            </compile>
                            <deploy>
                                ${project.groupId}:${project.artifactId}:${project.version}:deploy-html
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>
                org.apache.maven.lifecycle.mapping.LifecycleMapping
            </role>
            <role-hint>html-zip</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <process-resources>
                                ${project.groupId}:${project.artifactId}:${project.version}:web-resources
                            </process-resources>
                            <compile>
                                ${project.groupId}:${project.artifactId}:${project.version}:from-asciidoc
                                ,${project.groupId}:${project.artifactId}:${project.version}:from-markdown
                            </compile>
                            <package>
                                ${project.groupId}:${project.artifactId}:${project.version}:zip-html
                            </package>
                            <install>org.apache.maven.plugins:maven-install-plugin:install</install>
                            <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>html-zip</role-hint>
            <implementation>
                org.apache.maven.artifact.handler.DefaultArtifactHandler
            </implementation>
            <configuration>
                <type>zip</type>
                <extension>zip</extension>
                <language>html</language>
                <addedToClasspath>false</addedToClasspath>
            </configuration>
        </component>
    </components>
</component-set>